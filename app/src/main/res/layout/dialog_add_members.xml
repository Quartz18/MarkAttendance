<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/member_id_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Member ID"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/member_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Member Name"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_id_dialog"
        app:layout_constraintVertical_bias="0.044" />

    <EditText
        android:id="@+id/device_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Members Details \n"
        android:textAlignment="center"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_name_dialog"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connect"
        android:text="Connect to Device"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="5dp"
        android:background="@color/dark_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/device_name_dialog"
        app:layout_constraintVertical_bias="0.078"/>


</androidx.constraintlayout.widget.ConstraintLayout>